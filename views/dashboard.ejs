<%
const user = typeof _user !== "undefined" ? _user : {};
%>
<div class="container">
    <div class="row">
        <div class="col-4 d-flex align-items-center justify-content-center">
            <img src="<%= typeof image !== 'undefined' ? image : 'uploads/defaultProfile.png' %>" alt="">
        </div>
        <div class="col-8">
            <h1 class="mt-4">Dashboard</h1>
            <p class="lead mb-3">Welcome <%= user.name %></p>
            <%= typeof msg !== 'undefined' ? msg : '' %>
            <form action="/upload" method="POST" enctype="multipart/form-data" class="mb-3">
                <div class="mb-3">
                    <div>
                        <input name="profilePicture" type="file">
                    </div>
                </div>
                <button type="submit">Change profile picture</button>
            </form>
            <a href="/users/logout" class="btn btn-outline-danger">Logout</a>
        </div>
    </div>
</div>